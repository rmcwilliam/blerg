<%= form_tag(post_path(@post), method: :put) do %>   <!-- tell it what verb to use if you two routes that are the same -->
    <div class="post-field">
 	 <%= label_tag "Title:" %>    
      <%= text_field_tag :title, @post.title %>  
    </div>

    <div class="post-field">
      <%= label_tag "Body: " %>
      <%= text_area_tag :content, @post.content %>
    </div>

    <%= submit_tag "Publish!" %>  <!-- submit tag does whatever I have specified in the form tag above -->
<% end %>



